<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/margin_700"
        android:layout_height="@dimen/collection_detail_image_height"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:focusable="false"
        android:weightSum="2"
        android:background="@drawable/bg_pip_timing_rest"
        >
      <RelativeLayout
          android:id="@+id/epsiode_rest"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:focusable="true"
          android:background="@drawable/timing_rest_up_selector"
          android:layout_weight="1">
        <ImageView
            android:id="@+id/epsiode_choose"
            android:layout_marginTop="@dimen/margin_38"
            android:layout_marginLeft="@dimen/keyboard_item_size"
            android:layout_width="wrap_content"
            android:src="@drawable/unchoose_normal"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_toRightOf="@+id/epsiode_choose"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="看完本集休息"
                android:textSize="@dimen/keyboard_item_text_size"
                android:textColor="@color/white_0"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:text="针对本片不再提醒"
                android:textSize="@dimen/search_hot_tip_size"
                android:textColor="@color/dialog_lock_input_shapecolor"
                android:layout_height="match_parent"/>

        </LinearLayout>
      </RelativeLayout>
        <RelativeLayout
            android:id="@+id/parent_setting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:focusable="true"
            android:background="@drawable/timing_rest_down_selector"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/parent_choose"
                android:layout_marginTop="@dimen/margin_38"
                android:layout_marginLeft="@dimen/keyboard_item_size"
                android:layout_width="wrap_content"
                android:src="@drawable/unchoose_normal"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_toRightOf="@+id/parent_choose"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="去家长中心设置观看时长"
                android:textSize="@dimen/keyboard_item_text_size"
                android:textColor="@color/white_0"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:text="在家长中心内，更改单次时长或总时长，即时生效"
                android:textSize="@dimen/search_hot_tip_size"
                android:textColor="@color/dialog_lock_input_shapecolor"
                android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>