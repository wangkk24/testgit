<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/order_center_go_order_item_width"
    android:layout_height="@dimen/order_center_go_order_item_height"
    android:layout_marginLeft="@dimen/margin_26"
    android:layout_marginTop="@dimen/margin_13"
    android:layout_marginBottom="@dimen/margin_20"
    android:background="@drawable/go_order_list_item_selector"
    android:focusable="true"
    >


    <ImageView
        android:id="@+id/iv_go_order_item_poster"
        android:layout_width="@dimen/order_center_go_order_item_image_width"
        android:layout_height="@dimen/order_center_go_order_item_image_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:scaleType="fitEnd"
         />

    <ImageView
        android:id="@+id/iv_go_order_item_superscript"
        android:layout_width="@dimen/order_center_go_order_item_superscript_width"
        android:layout_height="@dimen/order_center_go_order_item_superscript_width"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/superscript_bg" />


    <TextView
        android:id="@+id/tv_go_order_item_superscript"
        android:layout_width="@dimen/order_center_go_order_item_superscript_width"
        android:layout_height="@dimen/order_center_go_order_item_superscript_width"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:rotation="45"
        android:singleLine="true"
        android:textColor="@color/c21_color"
        android:textSize="@dimen/margin_17"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/order_center_go_order_item_script_top"
        android:layout_marginRight="@dimen/order_center_go_order_item_script_right" />

    <TextView
        android:id="@+id/tv_go_order_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_marginTop="@dimen/margin_37.5"
        android:layout_marginLeft="@dimen/margin_26"
        android:layout_marginRight="@dimen/margin_26"
        android:textColor="@color/white_0"
        android:textSize="@dimen/order_center_go_order_item_name_size"
        />

    <TextView
        android:id="@+id/tv_go_order_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_go_order_item_name"
        android:layout_marginRight="@dimen/margin_26"
        android:layout_marginLeft="@dimen/margin_26"
        android:singleLine="true"
        android:textColor="@color/c37_color"
        android:textSize="@dimen/order_center_go_order_item_price_size"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_go_order_item_price"
        android:layout_marginLeft="@dimen/margin_26"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_go_order_item_price_org"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/order_list_price_org"
            android:textSize="@dimen/order_center_go_order_item_price_org_size"
            />
        <TextView
            android:id="@+id/tv_go_order_item_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="连续包月"
            android:textColor="@color/order_list_price_org"
            android:textSize="@dimen/order_center_go_order_item_price_org_size"/>
    </LinearLayout>



