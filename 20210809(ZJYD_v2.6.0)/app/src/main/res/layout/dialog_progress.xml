<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/progress_dialog_bg"
        android:layout_height="@dimen/progress_dialog_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
        <!--android:background="@drawable/loading_ani"-->
        <TextView
            android:id="@+id/progress_time_left"
            android:layout_width="@dimen/player_fullscreen_47dp"
            android:layout_height="@dimen/player_fullscreen_47dp"
            android:gravity="center"
            android:textColor="@color/white_0"
            android:textSize="@dimen/http_progress_text"
            android:visibility="gone"
            tools:text="@string/loading" />

    </RelativeLayout>


</LinearLayout>