<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/pan_width_1280"
    android:layout_height="wrap_content"
    android:focusable="false">


    <include
        android:id="@+id/rl_title"
        layout="@layout/home_pannel_title_layout" />

    <com.pukka.ydepg.launcher.view.ReflectRelativeLayout
        app:posterType="1"
        app:posterIsAlienType="true"
        app:posterSpecialHeight="@dimen/pan_poster13m_item_height"
        android:id="@+id/rl_item_container01"
        android:layout_width="@dimen/pan_poster13m_item_width"
        android:layout_height="@dimen/pan_poster13m_item_height"
        android:layout_below="@id/rl_title"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginLeft="@dimen/pan_common_group_marginLeft"
        android:focusable="true">

        <com.pukka.ydepg.common.extview.ShimmerImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pan_layer_height"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/phm_shadow_layer" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/pan_poster_item_marginTop_15"
            android:layout_marginLeft="@dimen/pan_poster13m_text_marginLeft"
            android:layout_marginRight="@dimen/margin_20"
            android:orientation="vertical">

            <TextView
                style="@style/phmTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/pan_poster13m_item_title_textSize"
                tools:text="我不是精英" />

            <TextView
                style="@style/phmSubTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/pan_poster13m_item_content_textSize"
                tools:text="全43集" />
        </LinearLayout>
    </com.pukka.ydepg.launcher.view.ReflectRelativeLayout>


    <com.pukka.ydepg.launcher.view.ReflectRelativeLayout
        app:posterType="1"
        app:posterIsAlienType="true"
        app:posterSpecialHeight="@dimen/pan_poster13m_item_height"
