<?xml version="1.0" encoding="utf-8"?>
<com.pukka.ydepg.common.extview.RelativeLayoutExt xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_0">

    <com.pukka.ydepg.common.extview.ImageViewExt
        android:id="@+id/im_guide"
        android:layout_width="match_parent"
        android:src="@drawable/default_detail_bg"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

    <com.pukka.ydepg.common.extview.ImageViewExt
        android:id="@+id/im_guide_left"
        android:layout_width="wrap_content"
        android:src="@drawable/pic_left"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_height="wrap_content" />
    <com.pukka.ydepg.common.extview.ImageViewExt
        android:id="@+id/im_guide_right"
        android:layout_width="wrap_content"
        android:src="@drawable/pic_right"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_height="wrap_content" />
    <com.pukka.ydepg.common.extview.ImageViewExt
        android:id="@+id/tv_guide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/epg_guide_btn_focus"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/vod_detail_pip_episode_setting_item_width"
        android:layout_marginBottom="@dimen/margin_39"
        android:visibility="gone"
        android:background="@drawable/select_epg_guide_tvbtn"
        />

    <com.pukka.ydepg.common.extview.ImageViewExt
        android:id="@+id/iv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/epg_guide_hint"
        android:layout_marginBottom="@dimen/margin_37.5"
        tools:ignore="HardcodedText,SpUsage" />

</com.pukka.ydepg.common.extview.RelativeLayoutExt>