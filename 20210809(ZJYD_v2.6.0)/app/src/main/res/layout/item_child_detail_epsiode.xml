<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/parent"
                android:layout_width="@dimen/margin_80"
                android:layout_height="@dimen/featured_detail_40px"
                android:focusable="true"
                android:layout_marginLeft="@dimen/movies_list_item_margin_left"
                android:layout_marginRight="@dimen/movies_list_item_margin_right"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/child_episode_selector"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/vipimg"
        android:layout_width="wrap_content"
        android:background="@drawable/details_episode_vip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/playimg"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edipose_playicon"/>

    <TextView
        android:id="@+id/episodes_name"
        android:layout_width="@dimen/featured_detail_90px"
        android:layout_height="@dimen/featured_detail_40px"
        android:focusable="false"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/c24_color"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/episodes_mark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail_episode_mark"
        android:visibility="gone"/>


</RelativeLayout>