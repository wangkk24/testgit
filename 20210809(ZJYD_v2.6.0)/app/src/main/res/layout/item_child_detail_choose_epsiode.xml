<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/parent"
                android:layout_width="@dimen/margin_65"
                android:layout_height="@dimen/margin_36"
                android:focusable="true"
                android:layout_marginLeft="@dimen/movies_list_item_margin_left"
                android:layout_marginRight="@dimen/movies_list_item_margin_right"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@drawable/child_episode_selector"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/vipimg"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/margin_19"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/playimg"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_3.75"
        android:layout_width="@dimen/margin_30"
        android:layout_height="wrap_content"
        android:src="@drawable/playing"/>

    <TextView
        android:id="@+id/episodes_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_36"
        android:focusable="false"
        android:singleLine="true"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/c24_color"
        android:textSize="@dimen/T31_C21_Light_size" />
</LinearLayout>


    <ImageView
        android:id="@+id/episodes_mark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail_episode_mark"
        android:visibility="gone"/>


</RelativeLayout>