<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/bg_child_pip_second_confirm"
        android:layout_width="@dimen/margin_700"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="@dimen/movies_list_catagory_lists_width">

        <TextView
            android:layout_width="@dimen/second_hint_with"
            android:textColor="@color/white_0"
            android:gravity="center"
            android:id="@+id/content"
            android:textSize="@dimen/T29_C21_Bold_size"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="@dimen/second_hint_with"
            android:textColor="@color/white_0"
            android:gravity="center"
            android:text="是否继续?"
            android:textSize="@dimen/T29_C21_Bold_size"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_60"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="@dimen/pan_height_234"
                android:gravity="center"
                android:focusable="true"
                android:textColor="@color/white_0"
                android:background="@drawable/bg_child_complete_btn_selector"
                android:layout_height="@dimen/margin_55"
                android:textSize="@dimen/T21_C21_Bold_size"
                android:layout_marginRight="@dimen/margin_20"
                android:text="确认"/>
            <TextView
                android:id="@+id/backtv"
                android:focusable="true"
                android:text="取消"
                android:textColor="@color/white_0"
                android:background="@drawable/bg_child_complete_btn_selector"
                android:layout_marginLeft="@dimen/margin_20"
                android:textSize="@dimen/T21_C21_Bold_size"
                android:layout_width="@dimen/pan_height_234"
                android:gravity="center"
                android:layout_height="@dimen/margin_55"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>