<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/pan_width_1280"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false">

    <include
        android:id="@+id/rl_title"
        layout="@layout/home_pannel_title_layout" />

    <com.pukka.ydepg.launcher.view.ReflectRelativeLayout
        android:id="@+id/rl_middleItem_container01"
        android:layout_width="@dimen/pan_poster132434_topLeftItem_width"
        android:layout_height="@dimen/pan_poster132434_topLeftItem_height"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_below="@+id/rl_title"
        android:layout_marginLeft="@dimen/pan_common_group_marginLeft"
        android:layout_marginTop="@dimen/margin_8"
        android:focusable="true"
        app:posterType="2">

        <com.pukka.ydepg.common.extview.ShimmerImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pan_layer_height"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/phm_shadow_layer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pan_poster132434_topLeftItem_textMarginBottom"
            android:layout_marginLeft="@dimen/pan_poster132434_topLeftItem_textMarginLeft"
            android:layout_marginRight="@dimen/margin_20"
            android:focusable="false"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                style="@style/phmTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/pan_poster132434_topLeftItem_textSize"
                tools:text="神奇女侠" />

            <TextView
                style="@style/phmSubTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pan_poster132434_topMiddleItem_textMarginTop"
                android:textSize="@dimen/pan_poster132434_topMiddleItem_BottomTextSize"
                tools:text="女神华丽上阵" />
        </LinearLayout>
    </com.pukka.ydepg.launcher.view.ReflectRelativeLayout>

    <com.pukka.ydepg.launcher.view.ReflectRelativeLayout
        android:id="@+id/rl_middleItem_container02"
        android:layout_width="@dimen/pan_poster132434_topLeftItem_width"
        android:layout_height="@dimen/pan_poster132434_topLeftItem_height"
        android:layout_alignTop="@id/rl_middleItem_container01"
        android:layout_marginLeft="@dimen/pan_common_item_marginLeft"
        android:layout_toRightOf="@id/rl_middleItem_container01"
        android:focusable="true"
        app:posterType="2">

        <com.pukka.ydepg.common.extview.ShimmerImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pan_layer_height"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/phm_shadow_layer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pan_poster1326_bottomText_margin"
            android:layout_marginLeft="@dimen/pan_poster1326_bottomText_margin"
            android:layout_marginRight="@dimen/margin_20"
            android:focusable="false"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                style="@style/phmTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/pan_poster1223_bottom_titleText_textSize"
                tools:text="变形金刚" />

            <TextView
                style="@style/phmSubTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pan_poster1223_titleText_marginTop"
                android:textSize="@dimen/pan_poster1223_contentText_textSize"
                tools:text="更新至20集" />
        </LinearLayout>
    </com.pukka.ydepg.launcher.view.ReflectRelativeLayout>

    <com.pukka.ydepg.launcher.view.ReflectRelativeLayout
        android:id="@+id/rl_middleItem_container03"
        android:layout_width="@dimen/pan_poster132434_topLeftItem_width"
        android:layout_height="@dimen/pan_poster132434_topLeftItem_height"
        android:layout_alignTop="@id/rl_middleItem_container01"
        android:layout_marginLeft="@dimen/pan_common_item_marginLeft"
        android:layout_toRightOf="@id/rl_middleItem_container02"
        android:focusable="true"
        app:posterType="2">

        <com.pukka.ydepg.common.extview.ShimmerImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pan_layer_height"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/phm_shadow_layer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pan_poster1326_bottomText_margin"
            android:layout_marginLeft="@dimen/pan_poster1326_bottomText_margin"
            android:layout_marginRight="@dimen/margin_20"
            android:focusable="false"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                style="@style/phmTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/pan_poster1223_bottom_titleText_textSize"
                tools:text="变形金刚" />

            <TextView
                style="@style/phmSubTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pan_poster1223_titleText_marginTop"
                android:textSize="@dimen/pan_poster1223_contentText_textSize"
                tools:text="更新至20集" />
        </LinearLayout>
    </com.pukka.ydepg.launcher.view.ReflectRelativeLayout>

    <com.pukka.ydepg.launcher.view.ReflectRelativeLayout
        android:id="@+id/rl_middleItem_container04"
        android:layout_width="@dimen/pan_poster132434_topRightItem_width"
        android:layout_height="@dimen/pan_poster132434_topRightItem_height"
        android:layout_alignTop="@id/rl_middleItem_container01"
        android:layout_marginLeft="@dimen/pan_common_item_marginLeft"
        android:layout_toRightOf="@+id/rl_middleItem_container03"
        android:focusable="true"
        android:descendantFocusability="blocksDescendants"
        app:posterType="4">

        <com.pukka.ydepg.common.extview.ShimmerImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pan_layer_height"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/phm_shadow_layer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pan_poster1223_contentText_margin"
            android:layout_marginLeft="@dimen/pan_poster1223_contentText_margin"
            android:layout_marginRight="@dimen/margin_30"
            android:focusable="false"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                style="@style/phmTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/pan_poster1223_titleText_textSize"
                tools:text="变形金刚" />

            <TextView
                style="@style/phmSubTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pan_poster1223_titleText_marginTop"
                android:textSize="@dimen/pan_poster1223_contentText_textSize"
                tools:text="更新至20集" />
        </LinearLayout>

        <!--2.4需求资源位支持轮播需求-->
        <include layout="@layout/viewpage2_layout"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_33"
            android:layout_marginEnd="@dimen/margin_33"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginBottom="@dimen/margin_40"
            tools:ignore="UselessLeaf">
            <com.pukka.ydepg.common.extview.VerticalScrollTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:lineSpacingExtra="@dimen/margin_2"
                app:tv_line="6"
                android:textColor="@color/white_0"
                android:gravity="center_vertical"
                android:textSize="@dimen/T23_C21_Light_size" />
        </LinearLayout>

    </com.pukka.ydepg.launcher.view.ReflectRelativeLayout>

</merge>