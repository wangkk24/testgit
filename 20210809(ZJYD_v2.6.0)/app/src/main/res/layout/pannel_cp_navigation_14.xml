                android:layout_marginTop="@dimen/pan_nav_cp14_item_margin_top"
                android:textSize="@dimen/pan_nav_cp14_subTitle_textSize" />
        </LinearLayout>
    </com.pukka.ydepg.launcher.view.ReflectRelativeLayout>

    <com.pukka.ydepg.launcher.view.ReflectRelativeLayout
        app:posterType="4"
        android:layout_alignTop="@id/rl_item_container01"
        android:layout_toRightOf="@id/rl_item_container03"
        android:layout_marginLeft="@dimen/pan_nav_cp14_item_margin_left"
        android:id="@+id/rl_item_container04"
        android:layout_width="@dimen/pan_nav_cp14_item_width"
        android:layout_height="@dimen/pan_nav_cp14_item_height"
        android:focusable="true">

        <com.pukka.ydepg.common.extview.ShimmerImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_scaleType="fitXY"/>
        <View
