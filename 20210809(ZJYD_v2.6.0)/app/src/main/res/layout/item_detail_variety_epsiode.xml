<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="@dimen/featured_detail_340px"
    android:layout_height="@dimen/featured_detail_variety_item_height"
    android:focusable="true"
    android:layout_marginLeft="@dimen/movies_list_item_margin_left"
    android:layout_marginRight="@dimen/movies_list_item_margin_right"
    android:layout_marginTop="@dimen/featured_detail_10px"
    android:layout_marginBottom="@dimen/margin_10"
    android:background="@drawable/detail_episode_normal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/playimg"
        android:layout_marginLeft="@dimen/featured_detail_15dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edipose_playicon"/>

    <TextView
        android:layout_toRightOf="@+id/playimg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/featured_detail_40px"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/margin_10"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="end"
        android:id="@+id/episodes_name"
        android:textColor="@color/c24_color"
        android:textSize="@dimen/T22_C24_Bold_size" />

    <ImageView
        android:id="@+id/vipimg"
        android:layout_width="wrap_content"
        android:background="@drawable/details_episode_vip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/episodes_mark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail_episode_mark"
        android:visibility="gone"/>
</RelativeLayout>