    <com.pukka.ydepg.common.extview.TextViewExt
        android:layout_below="@id/movies_list_item_img_bg"
        android:layout_marginTop="@dimen/my_itemView_top_margin"
        android:id="@+id/movies_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/my_itemView_small_margin"
        android:layout_marginRight="@dimen/my_itemView_small_margin"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="ASD"
        android:textColor="@color/c21_color"
        android:textSize="@dimen/my_itemView_ASD_textSize" />
