<!--            android:background="@drawable/mytv_list_shadow" />-->

        <View
            android:layout_width="@dimen/history_list_item_width"
            android:layout_height="@dimen/history_list_item_down_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mytv_history_list_item_downbg"
            />

        <TextView
            android:id="@+id/movies_list_item_progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/history_list_item_down_height"
            android:layout_alignParentBottom="true"
            android:text="观看不足一分钟"
            android:ellipsize="marquee"
            android:textColor="@color/c21_color"
            android:gravity="center_vertical"
            android:textSize="@dimen/history_list_item_down_size"
            android:layout_marginLeft="@dimen/margin_3.75"
            android:layout_marginRight="@dimen/margin_3.75"
            />


        <com.pukka.ydepg.common.extview.TextViewExt
            android:visibility="gone"
            android:id="@+id/movies_list_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/movies_list_item_score_margin_right"
            android:layout_marginRight="@dimen/movies_list_item_score_margin_right"
            android:text="8.0"
            android:textColor="@color/c24_color"
            android:textSize="@dimen/T252_C24_Light_size" />

