<?xml version="1.0" encoding="utf-8"?>
<com.pukka.ydepg.common.extview.RelativeLayoutExt
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/my_itemView_history_width"
    android:layout_height="@dimen/my_itemView_history_height"
    >

    <com.pukka.ydepg.common.extview.RelativeLayoutExt
        android:id="@+id/rl_item_profile_bookmark_list"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_2"
        android:background="@drawable/select_vertical_scroll_item_radiu4_bg"
        android:layout_height="@dimen/my_itemView_movies_pic_height"
        android:focusable="true">

        <com.pukka.ydepg.common.extview.ShimmerImageView
            android:id="@+id/movies_list_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <com.pukka.ydepg.common.extview.ImageViewExt
            android:id="@+id/movies_list_item_img_hd"
            android:layout_width="@dimen/my_itemView_hd_size"
            android:layout_height="@dimen/my_itemView_hd_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />


<!--        <com.pukka.ydepg.common.extview.ViewExt-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/movies_list_item_view_height"-->
