<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="@dimen/margin_104"
    android:layout_height="@dimen/margin_60"
    android:focusable="true"
    android:layout_marginStart="@dimen/margin_8"
    android:layout_marginEnd="@dimen/margin_4"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginBottom="@dimen/margin_5"
    android:background="@drawable/detail_episode_item_bg"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/detail_selected_icon"
        android:layout_width="@dimen/margin_8"
        android:layout_height="@dimen/margin_13"
        android:scaleType="fitXY"
        android:src="@drawable/detail_selected_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_12"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/vipimg"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/margin_19"
        android:scaleType="fitStart"/>

    <ImageView
        android:id="@+id/playimg"
        android:layout_width="@dimen/margin_18"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/margin_18"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/episodes_name"
        android:layout_width="@dimen/featured_detail_90px"
        android:layout_height="@dimen/featured_detail_40px"
        android:focusable="false"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="3"
        android:textColor="@color/c24_color"
        android:textSize="@dimen/margin_24" />

    <ImageView
        android:id="@+id/episodes_mark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail_episode_mark"
        android:visibility="gone"/>


</RelativeLayout>