<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.pukka.ydepg.moudule.mytv.presenter.view.MessageDialogAdapterView
        android:id="@+id/root_view_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/my_itemView_top_margin"
        android:layout_marginTop="@dimen/my_itemView_top_margin"
        android:background="@drawable/order_select_bg"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_30"
        android:paddingRight="@dimen/margin_30"
        android:paddingTop="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="@dimen/message_list_width"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/c21_color"
                android:textSize="@dimen/unipay_btncancle_marginleft" />
        </RelativeLayout>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="@dimen/message_list_width"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/collection_item_min_width"
            android:textColor="@color/c24_color"
            android:textSize="@dimen/order_text_validity_size" />
    </com.pukka.ydepg.moudule.mytv.presenter.view.MessageDialogAdapterView>
</LinearLayout>