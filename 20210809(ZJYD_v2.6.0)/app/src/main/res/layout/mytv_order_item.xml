<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mytv_list_name"
        android:textSize="@dimen/movie_list_item_name_big_size"
        android:textColor="@color/c21_color"
        android:maxWidth="@dimen/movie_list_name_min_width"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mytv_list_time"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/movie_list_item_time_big_size"
        android:textColor="@color/c24_color"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginBottom="15dp"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>