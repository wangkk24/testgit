<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="@dimen/featured_detail_90px"
    android:layout_height="@dimen/featured_detail_40px"
    android:focusable="true"
    android:layout_marginLeft="@dimen/movies_list_item_margin_left"
    android:layout_marginRight="@dimen/movies_list_item_margin_right"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginBottom="@dimen/margin_5"
    android:background="@drawable/detail_episode_normal"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/vipimg"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/playimg"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edipose_playicon"/>

    <TextView
        android:id="@+id/episodes_name"
        android:layout_width="@dimen/featured_detail_90px"
        android:layout_height="@dimen/featured_detail_40px"
        android:focusable="false"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/c24_color"
        android:textSize="@dimen/search_hot_tip_size" />

    <ImageView
        android:id="@+id/episodes_mark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail_episode_mark"
        android:visibility="gone"/>


</RelativeLayout>