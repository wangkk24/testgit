<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c07_color"
    android:gravity="center">

  <RelativeLayout
      android:id="@+id/rl_continue"
      android:layout_width="@dimen/pip_playback_iconw"
      android:layout_height="@dimen/pip_playback_iconw">

    <RelativeLayout
        android:layout_width="@dimen/pip_playback_iconw"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

      <ImageView
          android:id="@+id/iv_continue"
          android:layout_width="@dimen/pip_playback_imgw"
          android:layout_height="@dimen/pip_playback_imgh"
          android:layout_centerHorizontal="true"
          android:background="@drawable/play_96" />

      <TextView
          android:id="@+id/tv_continue"
          android:layout_width="@dimen/pip_playback_iconw"
          android:layout_height="wrap_content"
          android:layout_below="@id/iv_continue"
          android:layout_marginTop="@dimen/pip_playback_textmargintop"
          android:gravity="center"
          android:text="@string/pip_playback_playcontinue"
          android:textColor="@color/c21_color"
          android:textSize="@dimen/pip_playback_textsize" />
    </RelativeLayout>

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/rl_replay"
      android:layout_width="@dimen/pip_playback_iconw"
      android:layout_height="@dimen/pip_playback_iconw"
      android:layout_marginLeft="@dimen/pip_playback_marginleft"
      android:layout_toRightOf="@id/rl_continue">

    <RelativeLayout
        android:layout_width="@dimen/pip_playback_iconw"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

      <ImageView
          android:id="@+id/iv_replay"
          android:layout_width="@dimen/pip_playback_imgw"
          android:layout_height="@dimen/pip_playback_imgh"
          android:layout_centerHorizontal="true"
          android:background="@drawable/restart_96" />

      <TextView
          android:id="@+id/tv_replay"
          android:layout_width="@dimen/pip_playback_iconw"
          android:layout_height="wrap_content"
          android:layout_below="@id/iv_replay"
          android:layout_marginTop="@dimen/pip_playback_textmargintop"
          android:gravity="center"
          android:text="@string/pip_playback_txt_replay"
          android:textColor="@color/pip_playback_continue_txtcolor"
          android:textSize="@dimen/pip_playback_textsize" />
    </RelativeLayout>

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/rl_backtv_point"
      android:layout_width="@dimen/pip_playback_iconw"
      android:layout_height="@dimen/pip_playback_iconw"
      android:layout_marginLeft="@dimen/pip_playback_marginleft"
      android:layout_toRightOf="@id/rl_replay">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

      <ImageView
          android:id="@+id/iv_backtv_point"
          android:layout_width="@dimen/pip_playback_imgw"
          android:layout_height="@dimen/pip_playback_imgh"
          android:layout_centerHorizontal="true"
          android:background="@drawable/exit_96" />

      <TextView
          android:id="@+id/tv_backtv_point"
          android:layout_width="@dimen/pip_playback_iconw"
          android:layout_height="wrap_content"
          android:layout_below="@id/iv_backtv_point"
          android:layout_marginTop="@dimen/pip_playback_textmargintop"
          android:gravity="center"
          android:text="@string/pip_playback_txt_exit"
          android:textColor="@color/pip_playback_continue_txtcolor"
          android:textSize="@dimen/pip_playback_textsize" />
    </RelativeLayout>

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/rl_detail"
      android:layout_width="@dimen/pip_playback_iconw"
      android:layout_height="@dimen/pip_playback_iconw"
      android:layout_marginLeft="@dimen/pip_playback_marginleft"
      android:layout_toRightOf="@id/rl_backtv_point"
      android:visibility="gone">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

      <ImageView
          android:id="@+id/iv_detail"
          android:layout_width="@dimen/pip_playback_imgw"
          android:layout_height="@dimen/pip_playback_imgh"
          android:layout_centerHorizontal="true"
          android:background="@drawable/info_96" />

      <TextView
          android:id="@+id/tv_detail"
          android:layout_width="@dimen/pip_playback_iconw"
          android:layout_height="wrap_content"
          android:layout_below="@id/iv_detail"
          android:layout_marginTop="@dimen/pip_playback_textmargintop"
          android:gravity="center"
          android:text="@string/pip_playback_detail"
          android:textColor="@color/pip_playback_continue_txtcolor"
          android:textSize="@dimen/pip_playback_textsize" />
    </RelativeLayout>


  </RelativeLayout>
</RelativeLayout>