<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/pan_width_1280"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <include
        android:id="@+id/rv_title"
        layout="@layout/home_pannel_title_layout" />
    <com.pukka.ydepg.launcher.view.ReflectRelativeLayout
        app:posterType="0"
        android:id="@+id/rl_item_container01"
        android:layout_width="@dimen/pan_nav13_item_width"
        android:layout_below="@id/rv_title"
        android:layout_height="@dimen/pan_poster_children_13"
        android:layout_marginLeft="@dimen/pan_common_group_marginLeft"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:focusable="true">

        <com.pukka.ydepg.common.extview.ShimmerImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_scaleType="fitXY"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pan_layer_height"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:background="@drawable/phm_shadow_layer" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/pan_nav13_item_text_marginLeft"
            android:layout_marginRight="@dimen/margin_30"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pan_nav13_item_title_marginBottom"
                android:textColor="@color/color_template_title"
                android:textSize="@dimen/pan_nav13_item_title_textSize"
                tools:text="银河" />

            <TextView
                android:textColor="@color/color_template_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/pan_nav13_item_content_textSize"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                tools:text="热门电影包"
                android:singleLine="true" />
        </LinearLayout>
    </com.pukka.ydepg.launcher.view.ReflectRelativeLayout>

    <com.pukka.ydepg.launcher.view.ReflectRelativeLayout
        app:posterType="0"
        android:id="@+id/rl_item_container02"
        android:layout_width="@dimen/pan_nav13_item_width"
        android:layout_height="@dimen/pan_poster_children_13"
        android:layout_marginLeft="@dimen/pan_common_item_marginLeft"
        android:layout_toRightOf="@id/rl_item_container01"
        android:layout_alignTop="@id/rl_item_container01"
        android:focusable="true">

        <com.pukka.ydepg.common.extview.ShimmerImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_scaleType="fitXY"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pan_layer_height"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:background="@drawable/phm_shadow_layer" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/pan_nav13_item_text_marginLeft"
            android:layout_marginRight="@dimen/margin_30"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pan_nav13_item_title_marginBottom"
                android:textColor="@color/color_template_title"
                android:textSize="@dimen/pan_nav13_item_title_textSize"
                tools:text="银河" />

            <TextView
                android:textColor="@color/color_template_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/pan_nav13_item_content_textSize"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                tools:text="热门电影包"
                android:singleLine="true" />
        </LinearLayout>
    </com.pukka.ydepg.launcher.view.ReflectRelativeLayout>

    <com.pukka.ydepg.launcher.view.ReflectRelativeLayout
        app:posterType="0"
        android:id="@+id/rl_item_container03"
        android:layout_width="@dimen/pan_nav13_item_width"
        android:layout_height="@dimen/pan_poster_children_13"
        android:layout_marginLeft="@dimen/pan_common_item_marginLeft"
        android:layout_toRightOf="@id/rl_item_container02"
        android:layout_alignTop="@id/rl_item_container02"
        android:focusable="true">

        <com.pukka.ydepg.common.extview.ShimmerImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_scaleType="fitXY"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pan_layer_height"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:background="@drawable/phm_shadow_layer" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/pan_nav13_item_text_marginLeft"
            android:layout_marginRight="@dimen/margin_30"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/color_template_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/pan_nav13_item_title_textSize"
                tools:text="银河" />

            <TextView
                android:textColor="@color/color_template_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pan_nav13_item_title_marginBottom"
                android:textSize="@dimen/pan_nav13_item_content_textSize"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                tools:text="热门电影包"
                android:singleLine="true" />
        </LinearLayout>
    </com.pukka.ydepg.launcher.view.ReflectRelativeLayout>
</merge>