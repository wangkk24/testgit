        android:id="@+id/rl_bottom_item_container01"
        android:layout_width="@dimen/pan_poster1223_bottomItem_width"
        android:layout_height="@dimen/pan_poster1223_bottomItem_height"
        android:layout_alignLeft="@id/rl_top_item_container01"
        android:layout_below="@+id/rl_top_item_container01"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_8"
        android:focusable="true">

        <com.pukka.ydepg.common.extview.ShimmerImageView
