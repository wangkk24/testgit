<?xml version="1.0" encoding="utf-8"?>
<com.pukka.ydepg.common.extview.RelativeLayoutExt xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/history_detail_image_width"
    android:layout_height="@dimen/epgitem_channel_inrlwidth"
    android:layout_marginTop="@dimen/margin_16"
    android:layout_marginLeft="@dimen/margin_10"
    android:focusable="true">
    <!--android:background="@drawable/movies_list_child_item_selector"-->
    <com.pukka.ydepg.common.extview.RelativeLayoutExt
        android:id="@+id/movies_list_item_img_bg"
        android:layout_width="@dimen/history_detail_image_width"
        android:layout_height="@dimen/my_moreItem_height"
        android:background="@drawable/movies_list_item_selector">
    <com.pukka.ydepg.common.extview.ImageViewExt
        android:id="@+id/movies_list_item_img"
        android:layout_width="@dimen/history_detail_image_width"
        android:layout_height="@dimen/my_moreItem_height"
        android:scaleType="fitXY"
        android:padding="@dimen/margin_2"
        android:src="@drawable/default_poster" />

        <ImageView
            android:layout_marginTop="@dimen/margin_2"
            android:id="@+id/vipimg"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_height="@dimen/margin_26"
            android:layout_marginStart="@dimen/margin_10"
            android:scaleType="fitStart"/>
    </com.pukka.ydepg.common.extview.RelativeLayoutExt>

    <com.pukka.ydepg.common.extview.TextViewExt
        android:id="@+id/movies_list_item_name"
        android:layout_width="wrap_content"
        android:layout_below="@+id/movies_list_item_img_bg"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="惊天魔盗团惊天魔盗团惊天魔盗团惊天魔盗团惊天魔盗团惊天魔盗团"
        android:textColor="@color/c21_color"
        android:textSize="@dimen/search_text_size" />

</com.pukka.ydepg.common.extview.RelativeLayoutExt>