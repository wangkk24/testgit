<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/movies_list_catagory_item_height"
    android:background="@drawable/movies_list_catagory_item_selector"
    android:focusable="true"
    android:paddingRight="24dp">
    <TextView
        android:id="@+id/catagory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/movies_list_catagory_item_text_margin_left"
        android:layout_centerVertical="true"
        android:textSize="@dimen/T12_C21_Bold_size"
        android:textColor="@color/c21_color"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textStyle="bold"/>
    <ImageView
        android:visibility="visible"
        android:id="@+id/category_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/catagory_name"
        android:layout_marginLeft="8dp"
        android:src="@drawable/category_more"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>