<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280px"
    android:layout_height="720px"
    android:background="@drawable/popup_dialog_bg_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="875px"
        android:layout_marginTop="96px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分"
            android:textColor="@color/c21_color"
            android:textSize="@dimen/T12_C21_Bold_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="158px"
            android:textColor="@color/c21_color"
            android:textSize="@dimen/T28_C21_Bold_size"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/score_rating_bar"
            style="@style/detailBigRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:max="10"
            android:numStars="5"
            android:rating="5.0" />

        <TextView
            android:id="@+id/score_commit_button"
            android:layout_width="310px"
            android:layout_height="50px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="128px"
            android:background="@drawable/detail_button_selector"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/c24_color"
            android:textSize="@dimen/T24_C24_Light_size" />
    </LinearLayout>
</RelativeLayout>