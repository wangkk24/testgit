<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/movies_list_catagory_item_selector"
    android:focusable="true"
    android:padding="@dimen/margin_6"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_account_bind_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/c21_color"
        android:textSize="@dimen/account_dialog_list_title_size" />

    <ImageView
        android:id="@+id/cb_account_bind_check"
        android:layout_width="wrap_content"
        android:background="@drawable/choice_drawable"
        android:layout_height="wrap_content"
        android:focusable="false" />

</LinearLayout>