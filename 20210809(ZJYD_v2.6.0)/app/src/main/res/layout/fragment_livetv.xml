<?xml version="1.0" encoding="utf-8"?>
<com.pukka.ydepg.common.extview.FrameLayoutExt
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.pukka.ydepg.view.PlayView
        android:id="@+id/play_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:play_type="TYPE_NATIVE"
        app:play_resize_mode="FIT"
        app:ControlViewBackground="@drawable/playcontrolview_background"
        app:AutoPlay="false"/>

    <include layout="@layout/player_order_button"/>
    <include layout="@layout/player_order_layout"/>

    <include layout="@layout/player_bottom_infoview"/>

    <TextView
        android:id="@+id/tv_switch_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="@dimen/channel_no_right"
        android:layout_marginTop="@dimen/channel_no_top"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/c21_color"
        android:textSize="@dimen/channel_no_new" />

</com.pukka.ydepg.common.extview.FrameLayoutExt>