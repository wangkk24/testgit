<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_unsubscriber"
    android:orientation="vertical">


    <com.pukka.ydepg.common.extview.RelativeLayoutExt
        android:id="@+id/icon_img_bg"
        android:layout_width="@dimen/order_persuade_width"
        android:layout_height="@dimen/margin_93"
        android:layout_marginTop="@dimen/movie_menu_margintop"
        android:background="@drawable/movies_list_item_selector"
        android:focusable="true">
        <ImageView
            android:id="@+id/icon_img"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/order_persuade_width"
            android:layout_height="@dimen/margin_93"
            android:padding="@dimen/margin_2"
            android:scaleType="fitXY"
            android:src="@drawable/default_poster_bg"
            android:focusable="false"/>

    </com.pukka.ydepg.common.extview.RelativeLayoutExt>


        <com.pukka.ydepg.moudule.vod.view.FocusVerticalGridView
            android:id="@+id/recommend"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/order_persuade_vodlist_width"
            android:layout_height="@dimen/children_switch_height"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/help_line_marginleft"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/unSubscriber_confirm"
                android:layout_width="@dimen/search_keyboard_layout_height"
                android:layout_height="@dimen/help_menu_height"
                android:background="@drawable/my_dialog_ok_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="残忍退订"
                android:textColor="@color/c21_color"
                android:textSize="@dimen/search_hot_item_text_size" />

            <TextView
                android:id="@+id/back"
                android:layout_width="@dimen/search_keyboard_layout_height"
                android:layout_height="@dimen/help_menu_height"
                android:layout_marginLeft="@dimen/pan_scroll_vertical_text_container_height"
                android:background="@drawable/my_dialog_ok_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="我要保留"
                android:textColor="@color/c21_color"
                android:textSize="@dimen/search_hot_item_text_size" />

    </LinearLayout>
</LinearLayout>